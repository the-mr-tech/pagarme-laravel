{
    "name": "flyingluscas/pagarme-laravel",
    "description": "Pagar.me SDK for Laravel applications.",
    "license": "MIT",
    "authors": [
        {
            "name": "Lucas Pires",
            "email": "lucas.pires.mattos@gmail.com"
        }
    ],
    
    "repositories": [
        {
            "type":"package",
            "package": {
              "name": "marcelotadeujr/pagarme-php",
              "version":"master",
              "source": {
                  "url": "https://github.com/marcelotadeujr/pagarme-php.git",
                  "type": "git",
                  "reference":"master"
                }
            }
        }
    ],
    
    "require": {
        "php": "~5.5||~7.0",
        "illuminate/support": "^5.1",
        "marcelotadeujr/pagarme-php": "master"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "orchestra/testbench": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "FlyingLuscas\\PagarMeLaravel\\": "src"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/Unit/UnitTestCase.php",
            "tests/Integration/IntegrationTestCase.php"
        ],
        "psr-4": {
            "FlyingLuscas\\PagarMeLaravel\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always"
    },
    "extra": {
        "laravel": {
            "providers": [
                "FlyingLuscas\\PagarMeLaravel\\PagarMeServiceProvider"
            ],
            "aliases": {
                "PagarMe": "FlyingLuscas\\PagarMeLaravel\\PagarMeFacade"
            }
        }
    }
}
